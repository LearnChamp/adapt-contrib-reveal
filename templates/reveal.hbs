<div class="reveal-inner component-inner">
    {{> component this}}
    <div class="reveal-widget reveal-component component-widget">
        <div class="reveal-widget-slider" tabindex="1">
            <button class="base reveal-widget-control" aria-label="{{_globals._components._reveal.ariaLabel}}"><div class="reveal-widget-icon icon"></div></button>
            <div class="reveal-widget-item second-item">
                {{#if second.src}}
                    <img src="{{second.src}}" class="reveal-image" alt="{{second.alt}}" title="{{second.title}}"/>
                {{/if}}
                {{#if second.body}}
                    <div class="reveal-widget-item-text second">
                        <div class="reveal-widget-item-text-body reveal-second-long" class="a11y-ignore" aria-hidden="true" tab-index="-1">
                            <div class="reveal-widget-item-text-title">
                                {{{a11y_text second.title}}}
                            </div>
                            {{{a11y_text second.body}}}                          
                        </div>
                        <div class="reveal-link-text reveal-hidden">
                            <button class="reveal-popup-open" tabindex="-1">{{#if second.moreText}}{{second.moreText}}{{else}}More{{/if}}</button>
                        </div>
                    </div>
                {{/if}}
            </div>
            <div class="reveal-widget-item first-item" tabindex="2">
                {{#if first.src}}
                    <img src="{{first.src}}" class="reveal-image" alt="{{first.alt}}" title="{{first.title}}"/>
                {{/if}}
                {{#if first.body}}
                    <div class="reveal-widget-item-text first">
                        <div class="reveal-widget-item-text-body reveal-first-long">
                            <div class="reveal-widget-item-text-title">
                                {{{a11y_text first.title}}}
                            </div>
                            {{{a11y_text first.body}}}
                        </div>
                        <div class="reveal-link-text reveal-hidden">
                            <button class="reveal-popup-open" tabindex="-1">{{#if first.moreText}}{{first.moreText}}{{else}}More{{/if}}</button>
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>  
</div>